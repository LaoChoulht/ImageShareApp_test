<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/main_List_cv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/main_list_card1_iv_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="center"
                app:layout_constraintBottom_toTopOf="@id/main_list_card1_tv_imageID"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/main_list_card1_tv_imageID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="test"
                app:layout_constraintBottom_toTopOf="@id/main_list_card1_iv_likeBtn"
                app:layout_constraintTop_toBottomOf="@id/main_list_card1_iv_thumbnail" />

            <ImageView
                android:id="@+id/main_list_card1_iv_likeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_thumb_up_gray_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/main_list_card1_tv_imageID" />

            <TextView
                android:id="@+id/main_list_card1_tv_likeNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="test"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/main_list_card1_iv_likeBtn"
                app:layout_constraintTop_toBottomOf="@id/main_list_card1_tv_imageID" />

            <ImageView
                android:id="@+id/main_list_card1_iv_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_vertical_align_bottom_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>